<?xml version="1.0" encoding="utf-8"?>
<resources>

	<attr name="progress" format="float"/>

	<declare-styleable name="CardProfile">
		<attr name="username" format="string" />
		<attr name="time" format="string" />
		<attr name="android:src" />
	</declare-styleable>

	<declare-styleable name="CardFollowers">
		<attr name="imageCount" format="integer" />
		<attr name="cardBackground" format="color" />
		<attr name="imageSize" format="dimension" />

	</declare-styleable>

	<declare-styleable name="ProgressBar">
		<attr name="progress"/>
		<attr name="percentagePaddingBody" format="float" />
		<attr name="percentagePaddingIndicator" format="float" />
		<attr name="strokeWidthBody" format="dimension" />
		<attr name="strokeWidthIndicator" format="dimension" />
		<attr name="bodyColor" format="color" />
		<attr name="indicatorColor" format="color" />
		<attr name="textColor" format="color" />
		<attr name="textSize" format="dimension" />
		<attr name="animeteDuration" format="integer" />
	</declare-styleable>

	<declare-styleable name="CardTransport">
		<attr name="showIndicator" format="boolean" />
		<attr name="showSpeed" format="boolean" />
		<attr name="showRisk" format="boolean" />
		<attr name="showExtra" format="boolean" />
		<attr name="showStatus" format="boolean" />
		<attr name="showPath" format="boolean" />
		<attr name="transportType" format="string" />
		<attr name="progress"/>
		<attr name="speed" format="integer" />
		<attr name="punctureRisk" format="integer" />
		<attr name="extraName" format="string" />
		<attr name="extra" format="string" />
		<attr name="status" format="string" />
		<attr name="path" format="integer" />

	</declare-styleable>

</resources>